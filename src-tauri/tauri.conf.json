{
  "productName": "YouTube Local Viewer",
  "version": "1.0.7",
  "identifier": "com.piniki.youtube-local-viewer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1422",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "YouTube Local Viewer",
        "width": 1920,
        "height": 1080
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost https://i.ytimg.com; media-src 'self' asset: https://asset.localhost; connect-src ipc: http://ipc.localhost https://www.youtube.com https://i.ytimg.com; font-src 'self' data:; object-src 'none'; base-uri 'self'",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      },
      "wix": {
        "language": "en-US"
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/piniki-dev/youtube-local-viewer/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ0QjEwRjYyNUQ5Q0E4MTIKUldRU3FKeGRZZyt4Uk1QWklyUHNETGxHb3VsWllacnI2aHh6K0ttZWNhZWFlL1ZLeXlrMHFqcWIK"
    }
  }
}
